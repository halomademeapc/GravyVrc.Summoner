<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GravyVrc.Summoner"
             xmlns:fluent="clr-namespace:MauiIcons.Fluent;assembly=MauiIcons.Fluent"
             x:Class="GravyVrc.Summoner.MainPage">

    <ContentPage.BindingContext>
        <local:ParameterListViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>


    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Scan an NFC tag or set some values manually"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="26" />

            <Label
                Text="Parameters"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="16" />
            <ListView x:Name="ParameterList"
                      SelectionMode="None"
                      ItemsSource="{Binding Collection}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnSpacing="6"
                                  RowSpacing="10"
                                  Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                                <Label Grid.Column="1"
                                       Text="{Binding Value}"
                                       VerticalOptions="Center" />
                                <ImageButton Grid.Column="2"
                                             Aspect="Center"
                                             Padding="2"
                                             Source="{fluent:Icon Icon=Edit48, IconSize=12 }"
                                             ToolTipProperties.Text="Edit"
                                             Clicked="OnEditClicked"
                                             HorizontalOptions="End"
                                             VerticalOptions="Center" />
                                <ImageButton Grid.Column="3"
                                             Aspect="Center"
                                             Padding="2"
                                             Source="{fluent:Icon Icon=Delete48, IconSize=12 }"
                                             ToolTipProperties.Text="Remove"
                                             Clicked="OnRemoveClicked"
                                             HorizontalOptions="End"
                                             VerticalOptions="Center" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="AddButton"
                    Text="Add Parameter"
                    ImageSource="{fluent:Icon Icon=Add28, IconSize=16 }"
                    HorizontalOptions="End"
                    Clicked="OnAddClicked" />

            <HorizontalStackLayout Spacing="12">
                <Button x:Name="WriteButton"
                        Text="Write Tag"
                        Clicked="OnWriteClicked"
                        ImageSource="{fluent:Icon Icon=DeveloperBoardLightning20, IconSize=16 }"
                        IsEnabled="{Binding CanWrite}" />
                <Button x:Name="SubmitButton"
                        Text="Set Value"
                        ImageSource="{fluent:Icon Icon=Send28, IconSize=16 }"
                        Clicked="OnButtonClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>